<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.bluemobi.www.data.dao.member.MemberActionsInfoDao">

	<resultMap id="colomnResult" type="com.bluemobi.www.data.model.member.MemberActionsInfo">
		<id property="id" column="id" />
		<result property="memberId" column="memberId" />
		<result property="roleId" column="roleId" />
		<result property="createDate" column="createDate" />
		<association property="roleInfo"
			select="com.bluemobi.www.data.dao.recruit.RecruitRoleInfoDao.selectById"
			column="roleId"></association>
		<association property="memberInfo"
			select="com.bluemobi.www.data.dao.member.MemberInfoDao.selectById"
			column="memberId"></association>
	</resultMap>
	<!-- 动态sql -->
	<sql id="colomnResult">
		<![CDATA[
	     id,
	     memberId,
	     roleId,
	     DATE_FORMAT(createDate,'%Y-%m-%d %H:%i:%S') as createDate
	 ]]>
	</sql>
	<insert id="insert">
	   insert into member_actions_info  
	   <trim prefix="(" suffix=")" suffixOverrides=",">
			     <if test="id!=null">id,</if>
			     <if test="memberId!=null">memberId,</if>
			     <if test="roleId!=null">roleId,</if>
			     <if test="createDate!=null">createDate,</if>
		</trim>
	   	<trim prefix="values(" suffix=")" suffixOverrides=",">
			     <if test="id!=null">#{id},</if>
			     <if test="memberId!=null">#{memberId},</if>
			     <if test="roleId!=null">#{roleId},</if>
			     <if test="createDate!=null">#{createDate},</if>
		</trim>
	</insert>

	<update id="update">
	   update member_actions_info 
	   <set>
			     <if test="id!=null">id=#{id},</if>
			     <if test="memberId!=null">memberId=#{memberId},</if>
			     <if test="roleId!=null">roleId=#{roleId},</if>
			     <if test="createDate!=null">createDate=#{createDate},</if>
		</set>
		where 
	   		 id=#{id} 
	</update>

	<delete id="delete">
	   delete from
	     member_actions_info 
	   where 
	    id=#{id} 
	</delete>

	<select id="selectEntity" resultMap="colomnResult">
	   select 
	<include refid="colomnResult" /> 
	   from member_actions_info
	  <where>
				<if test=" id != null and id != '' ">
					and id=#{id} 
				</if>
				<if test=" memberId != null and memberId != '' ">
					and memberId=#{memberId} 
				</if>
				<if test=" roleId != null and roleId != '' ">
					and roleId=#{roleId} 
				</if>
				<if test=" createDate != null and createDate != '' ">
					and createDate=#{createDate} 
				</if>
		</where>
	</select>
	
	<!-- 根据条件信息 -->
	<select id="selectAll"  resultMap="colomnResult">
		select
		<include refid="colomnResult" /> 
		<![CDATA[
			from member_actions_info
		]]>
		<where>
				<if test=" id != null and id != '' ">
					and id=#{id} 
				</if>
				<if test=" memberId != null and memberId != '' ">
					and memberId=#{memberId} 
				</if>
				<if test=" roleId != null and roleId != '' ">
					and roleId=#{roleId} 
				</if>
				<if test=" createDate != null and createDate != '' ">
					and createDate=#{createDate} 
				</if>
				<if test=" memberName != null and memberName != '' ">
					and memberId in (select id from member_info where nickname = #{memberName}) 
				</if>
		</where>
		<if test="sort != null">
				order by ${sort} ${order}
		</if>
	</select>
	<!-- 根据条件查询数量 -->
	<select id="selectCount"  resultType="int">

		select count(id) from member_actions_info
		<where>
				<if test=" id != null and id != '' ">
					and id=#{id} 
				</if>
				<if test=" memberId != null and memberId != '' ">
					and memberId=#{memberId} 
				</if>
				<if test=" roleId != null and roleId != '' ">
					and roleId=#{roleId} 
				</if>
				<if test=" createDate != null and createDate != '' ">
					and createDate=#{createDate} 
				</if>
		</where>
	</select>
	<!-- 根据主键查询信息 -->
	<select id="selectById"  resultMap="colomnResult">
		select
		<include refid="colomnResult" /> 
		<![CDATA[
			from member_actions_info where 
			
			   	 id=#{id} 
		]]>
		
	</select>
	
	<!-- 批量删除 -->
	<select id="selectByIds" parameterType="java.util.List" resultMap="colomnResult">
		select
		<include refid="colomnResult" /> 
		 from member_actions_info where id in
		<foreach item="idList" index="index" collection="list" open="(" separator="," close=")">
  			#{idList}
 		</foreach>
	</select>
		
	<!-- 批量删除 -->
	<delete id="batchDelete" parameterType="java.util.List">
		delete from member_actions_info where id in
		<foreach item="idList" index="index" collection="list" open="(" separator="," close=")">
  			#{idList}
 		</foreach>
	</delete>
	
	<!-- 批量修改 -->
	<update id="batchUpdate" parameterType="java.util.HashMap">
		update member_actions_info
		<set>
			     <if test="id!=null">id=#{id},</if>
			     <if test="memberId!=null">memberId=#{memberId},</if>
			     <if test="roleId!=null">roleId=#{roleId},</if>
			     <if test="createDate!=null">createDate=#{createDate},</if>
		</set>
		where id in
		<foreach item="idList" index="index" collection="list" open="(" separator="," close=")">
  			#{idList}
 		</foreach>
	</update>
</mapper> 